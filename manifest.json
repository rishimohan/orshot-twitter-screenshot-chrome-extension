{
  "manifest_version": 3,
  "name": "Orshot - Beautiful Twitter Screenshots",
  "version": "2.0.0",
  "description": "Generate Beautiful Twitter screenshots in Chrome with just one click",
  "permissions": ["activeTab", "storage"],
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*",
    "https://orshot.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*", "https://x.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["https://twitter.com/*", "https://x.com/*"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Orshot Settings"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
